<div style="width: 400px">
  <% form_tag '/auth/identity/callback', :method => :post, :class => 'form-horizontal' do %>
    <div class="control-group">
      <label class="control-label" for="auth_key">Email</label>
      <div class="controls">
        <input id='auth_key' name='auth_key' type="email" required />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type='password' id='password' name='password'/>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button class="btn btn-primary" type='submit'>Login</button>
        <!--
        <a href='/auth/identity/register' class="btn">Create an Identity</a>
        -->
      </div>
    </div>
  <% end %>
</div>
