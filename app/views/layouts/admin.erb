  <body>
    <div id="wrap" class="clearfix">

      <!-- Begin page content -->
      <div class="container">
        <div class="page-header">
          <h1><a href="<%= url_for(:index) %>">Tumble.io</a></h1>
        </div>
        <p class="lead"><%= @page_lead %></p>
      </div>

      <div id="main" class="container">
        <%= yield %>
      </div>

      <div id="push"></div>
    </div>

    <div id="footer">
      <div class="container">
        <% if logged_in? %>
          <p class="muted credit pull-right"><a href="<%= url_for :post %>">New post</a> | <a href="<%= url_for :feeds %>">Feeds</a> | <a href="<%= url_for :logout %>">Logout</a></p>
        <% end %>
        <p class="muted credit">Tumble-log by <a href="http://natwelch.com">Nat Welch</a>.</p>
      </div>
    </div>

    <!-- GAnal -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-333449-14']);
      _gaq.push(['_setDomainName', 'tumble.io']);
